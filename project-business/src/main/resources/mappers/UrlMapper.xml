<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.project.dao.UrlMapper" >
  <resultMap id="BaseResultMap" type="com.my.project.entity.Url" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="list_pic" property="listPic" jdbcType="VARCHAR" />
    <result column="menu_id" property="menuId" jdbcType="BIGINT" />
    <result column="disable" property="disable" jdbcType="TINYINT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, url, title, list_pic, menu_id
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from url
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from url
    where id = #{id,jdbcType=INTEGER}
  </delete>

  <insert id="insertSelective" parameterType="com.my.project.entity.Url" >
    insert into url
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="url != null" >
        url,
      </if>
      <if test="title != null" >
        title,
      </if>
      <if test="listPic != null" >
        list_pic,
      </if>
      <if test="menuId != null" >
        menu_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="url != null" >
        #{url,jdbcType=VARCHAR},
      </if>
      <if test="title != null" >
        #{title,jdbcType=VARCHAR},
      </if>
      <if test="listPic != null" >
        #{listPic,jdbcType=VARCHAR},
      </if>
      <if test="menuId != null" >
        #{menuId,jdbcType=BIGINT},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.my.project.entity.Url" >
    update url
    <set >
      <if test="url != null" >
        url = #{url,jdbcType=VARCHAR},
      </if>
      <if test="title != null" >
        title = #{title,jdbcType=VARCHAR},
      </if>
      <if test="listPic != null" >
        list_pic = #{listPic,jdbcType=VARCHAR},
      </if>
      <if test="menuId != null" >
        menu_id = #{menuId,jdbcType=BIGINT},
      </if>
      <if test="disable != null" >
        disable = #{disable,jdbcType=TINYINT},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

  <update id="deleteUrlById">
    update url set disable = 2 where id = #{id}
  </update>

  <select id="queryUrl" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from url
    where 1=1
    <if test="dto.title != null and dto.title != ''">
      and title = #{dto.title}
    </if>
      <if test="dto.menuId != null">
          and menu_id = #{dto.menuId}
      </if>
      order by create_time desc
      limit (#{dto.currentPage} - 1) * #{dto.pageSize}, #{dto.pageSize}
  </select>

    <select id="countUrl" resultType="java.lang.Integer">
        select
        count(id)
        from url
        where 1=1
        <if test="dto.title != null and dto.title != ''">
            and title = #{dto.title}
        </if>
        <if test="dto.menuId != null">
            and menu_id = #{dto.menuId}
        </if>
    </select>
</mapper>